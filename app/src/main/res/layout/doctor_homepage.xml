<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="12dp"
    android:animateLayoutChanges="false"
    android:background="#BC9C6E">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C59466"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="403dp"
            android:layout_height="69dp"
            android:backgroundTint="#9E7656"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.545"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.038" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="304dp"
            android:layout_height="53dp"
            android:text="MY DOG BERNARD 🐶"
            android:textColor="#D7BAAD"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.057" />

        <androidx.constraintlayout.widget.Barrier
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="top" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="338dp"
            android:layout_height="647dp"
            android:backgroundTint="#9D7354"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.892" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="82dp"
            android:layout_height="27dp"
            android:fontFamily="serif-monospace"
            android:text="DOCTOR"
            android:textColor="#65432A"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.17" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Homepage"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.268" />

        <ScrollView
            android:layout_width="330dp"
            android:layout_height="490dp"
            android:background="#68432A"
            android:scrollbarStyle="insideInset"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.707">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <Switch
                    android:id="@+id/switch2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="18dp"
                    android:background="#E07112 "
                    android:backgroundTint="#E07112 "
                    android:paddingLeft="6dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:switchTextAppearance="@style/TextAppearance.AppCompat.Large"
                    android:text="Available"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:trackTint="#FF0000"
                    android:typeface="normal" />

                <TextView
                    android:id="@+id/unavailableMsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="12dp"
                    android:background="#F1EAAE"
                    android:backgroundTint="#F1EAAE"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="You are currently unavailable. Turn on availability to be contacted by owners for job opportunities."
                    android:textColor="#7C3D12"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/noOwnerMsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="12dp"
                    android:background="#F1EAAE"
                    android:backgroundTint="#F1EAAE"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="No Owner has chosen you yet. When an owner links with you, your available slots will appear here."
                    android:textColor="#7C3D12"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <View
                    android:id="@+id/view7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="0dp"
                    android:background="#F1EAAE"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/textView33"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="serif"
                    android:text="Chat with Client"
                    android:textColor="#F2F0EE"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/chatRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#68432A"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:visibility="visible">

                    <EditText
                        android:id="@+id/chatInput"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_bubble"
                        android:hint="Type a message..."
                        android:padding="12dp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#BC9C6E"
                        android:visibility="gone" />

                    <ImageButton
                        android:id="@+id/sendChatButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_menu_send"
                        android:tint="#C3A272"
                        android:visibility="gone" />
                </LinearLayout>

                <View
                    android:id="@+id/view12"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#F1EAAE"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="186dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:text="Proposed Appointment Dates"
                        android:textColor="#F1EAAE"
                        android:textSize="16sp"
                        android:visibility="gone" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#FBF4B5"
                    android:fontFamily="monospace"
                    android:gravity="center_horizontal"
                    android:text="Proposed Doctors Dates"
                    android:textColor="#503A2B"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/textView37"
                        android:layout_width="216dp"
                        android:layout_height="37dp"
                        android:background="#C3A272"
                        android:fontFamily="monospace"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="Option 1: DD/MM/YYYY 00:00-00:00"
                        android:textColor="#523522"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/button13"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1"
                        android:backgroundTint="#A24845"
                        android:ellipsize="none"
                        android:fontFamily="serif-monospace"
                        android:maxLines="1"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="Defer?"
                        android:textSize="14sp"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/textView42"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#BC9C6E"
                        android:fontFamily="monospace"
                        android:gravity="center_horizontal"
                        android:text="Option 2: DD/MM/YYYY 00:00-00:00"
                        android:textColor="#65412A"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/button14"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:layout_marginTop="6dp"
                        android:backgroundTint="#A24845"
                        android:ellipsize="none"
                        android:fontFamily="serif-monospace"
                        android:maxLines="1"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="Defer?"
                        android:textSize="14sp"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/textView43"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#BC9C6E"
                        android:fontFamily="monospace"
                        android:gravity="center_horizontal"
                        android:text="Option 3: DD/MM/YYYY 00:00-00:00"
                        android:textColor="#65412A"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/button15"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1"
                        android:backgroundTint="#A24845"
                        android:ellipsize="none"
                        android:fontFamily="serif-monospace"
                        android:maxLines="1"
                        android:paddingLeft="18dp"
                        android:paddingRight="18dp"
                        android:text="Defer?"
                        android:textSize="14sp"
                        android:visibility="gone" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/imageButton9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:backgroundTint="#8A1F1C"
                    android:visibility="gone"
                    app:srcCompat="@android:drawable/ic_popup_sync" />

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FBF4B5"
                    android:fontFamily="monospace"
                    android:gravity="center_horizontal"
                    android:text="Requested Date:\nDD/MM/YYYY 00:00-00:00"
                    android:textColor="#503A2B"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <Button
                        android:id="@+id/button6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:backgroundTint="#4EA245"
                        android:text="Accept"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:backgroundTint="#A24545"
                        android:text="Reject"
                        android:visibility="gone" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>